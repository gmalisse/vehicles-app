<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VehiclesApp.Pages.MainPage"
             Title="Home">
    <VerticalStackLayout
        Spacing="-90">
        <Image
            x:Name="imgCar"
            Source="home_car"
            HeightRequest="255"
            HorizontalOptions="Center"
            VerticalOptions="Center"/>

        <Label
            x:Name="lblAppName"
            Text="VehicleApp"
            HorizontalOptions="Center"
            FontSize="50"/>

        <VerticalStackLayout
            Padding="110">
            <Entry
                x:Name="etrBuscar"
                Placeholder="Buscar"
                FontSize="19"
                TextColor="Black"
                WidthRequest="270"
                BackgroundColor="White"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>