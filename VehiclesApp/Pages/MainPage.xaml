<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VehiclesApp.Pages.MainPage"
             Title="Home">
    <VerticalStackLayout
        Spacing="-68">
        <Image
            x:Name="imgCar"
            Source="electric_car"
            HeightRequest="280"
            HorizontalOptions="Center"
            VerticalOptions="Center"/>

        <Label
            x:Name="lblAppName"
            Text="vehicleApp"
            HorizontalOptions="Center"
            FontSize="54"/>

        <VerticalStackLayout
            Padding="70">
            <Entry
                x:Name="etrBuscar"
                Placeholder="Buscar"
                PlaceholderColor="LightGray"
                FontSize="Medium"
                TextColor="Black"
                WidthRequest="320"
                BackgroundColor="White"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>